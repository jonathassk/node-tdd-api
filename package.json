{
  "name": "tdd-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage --silent --runInBand --detectOpenHandles "
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathassk/node-tdd-api.git"
  },
  "author": "jonathas fonseca",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonathassk/node-tdd-api/issues"
  },
  "homepage": "https://github.com/jonathassk/node-tdd-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "husky": "^4.2.5",
    "jest": "^25.5.1",
    "lint-staged": "^10.2.0",
    "standard": "^14.3.3",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.8",
    "validator": "^13.0.0"
  }
}
