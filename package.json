{
  "name": "tdd-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watch ",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "standard": {
    "env": ["jest"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathassk/node-tdd-api.git"
  },
  "author": "jonathas fonseca",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonathassk/node-tdd-api/issues"
  },
  "homepage": "https://github.com/jonathassk/node-tdd-api#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^25.5.1",
    "lint-staged": "^10.2.0",
    "standard": "^14.3.3"
  }
}
